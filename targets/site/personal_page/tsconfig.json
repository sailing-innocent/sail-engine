{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "ESNext",
        "target": "ES6",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noResolve": false,
        "sourceMap": true,
        "lib": [
            "DOM",
            "ES6"
        ],
        "rootDir": ".",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*",
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@webgpu/types"
        ]
    }
}